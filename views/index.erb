<% for order in @orders %>
  <p>Name: <%= order.pretty_name() %></p>
  <p>Order: <%= order.quantity %> x < <%= order.topping %></p>
  <p><a href="/pizza-orders/<%= order.id %>"> Show Order</a></p>
  <form method="post" action="/pizza-orders/delete/<%= order.id%>">
  <input type="submit" value="Delete Order" onclick="Order Deleted">
  </form>
<hr />
<% end %>
